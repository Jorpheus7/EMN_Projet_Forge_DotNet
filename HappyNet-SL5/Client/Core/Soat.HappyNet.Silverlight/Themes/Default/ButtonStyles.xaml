                                        <Rectangle x:Name="rectangle" Fill="#FFFFFFFF" Stroke="{x:Null}" Margin="0,3,0,3" VerticalAlignment="Stretch" Width="2" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
