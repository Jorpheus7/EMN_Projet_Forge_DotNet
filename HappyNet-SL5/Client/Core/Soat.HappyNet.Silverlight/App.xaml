<Application   
  x:Class="Soat.HappyNet.Silverlight.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:lang="clr-namespace:Soat.HappyNet.Silverlight.Infrastructure.Localization;assembly=Soat.HappyNet.Silverlight.Infrastructure">

  <Application.Resources>
    <ResourceDictionary>       
        <ResourceDictionary.MergedDictionaries>
            <!-- UriMapper -->
            <ResourceDictionary Source="Assets/UriMappers/UriMapper.xaml"/>
            
            <!-- Converters -->
            <ResourceDictionary Source="Assets/Converters/Converters.xaml"/>
            
            <!-- Styles -->
            <ResourceDictionary Source="Themes/Default.xaml"/>
        </ResourceDictionary.MergedDictionaries>

        <!-- Localization -->
        <lang:LocalizedStrings x:Key="LocalizedStrings" />
        
    </ResourceDictionary>
  </Application.Resources>

</Application>